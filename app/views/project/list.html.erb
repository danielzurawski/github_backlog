<% content_for :title do %>
 	Your projects
<% end %>
<h1>Your projects</h1>
<div style="float:right"><%= link_to 'Create a new project', project_new_path, :class => 'btn btn-success' %></div>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Project name</th>
			<th>Linked repositories</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
	<% @projects.each { |project| %>
		<tr>
			<td><%= project.scope %>/<%= project.name %></td>
			<td>
				<% project.repos.each { |github| %>
					<%= link_to github.owner + '/' + github.repo, 'https://github.com/'+ github.owner + '/' + github.repo %>
				<% } %>
			</td>
			<td>
				<%= link_to 'Show', {:controller => "project", :action => "show", :scope => project.scope, :name => project.name}, :class => 'btn btn-info' %>
				<%= link_to 'Edit', {:controller => "project", :action => "edit", :scope => project.scope, :name => project.name}, :class => 'btn btn-warning' %>
				<%= link_to 'Delete', { :controller => "project", :action => "delete", :scope => project.scope, :name => project.name}, :class => 'btn btn-danger' %>
			</td>
		</tr>
	<% } %>
	</tbody>
</table>